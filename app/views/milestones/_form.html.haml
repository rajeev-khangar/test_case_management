.modal-dialog.modal-lg
  .modal-content.animated.bounceInRight
    .modal-header
      %h4.modal-title
        Milestone
      %button.close.modal-close{"data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
        %span.sr-only Close
      %i.fa.fa-sticky-note-o.modal-icon
    = bootstrap_form_for([@project, @milestone], remote: true, html: { "format" => :js }) do |f|
      .modal-body
        = f.text_field :name
        = f.date_field :start_date
        = f.date_field :end_date 
      .modal-footer
        = f.submit :save, class: "btn btn-success"
