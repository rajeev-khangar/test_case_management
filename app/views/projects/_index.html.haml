.row
  .col-md-12
    %table.table.table-bordered
      %thead
        %tr
          %th Title
          %th Actions
      %tbody
        - @projects.each do |project|
          %tr
            %td= project.title
            %td
              = link_to "Edit", edit_project_path(project), remote: true, "data-toggle": "modal", "data-target": "#projectFormModal", class: "btn btn-primary"
              = link_to "Show", project_path(project), class: "btn btn-info"
              = link_to "Destroy", project_path(project), method: :delete, class: "btn btn-danger"